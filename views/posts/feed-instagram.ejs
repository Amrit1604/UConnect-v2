                    </a>

                    <a href="/posts?category=general" class="category-item <%= currentCategory === 'general' ? 'active' : '' %>">
                        <span>üí¨</span>
                        <span>General</span>
                        <span class="category-count"><%= categoryStats['general'] || 0 %></span>
                    </a>
                </div>
                </div>
            </div>

            <!-- üì± MAIN POSTS FEED -->
            <div class="posts-main">
                <div class="posts-header">
                    <h1 class="posts-title">
                        <span>üî•</span>
                        <%= currentCategory === 'all' || !currentCategory ? 'Campus Feed' :
                            currentCategory === 'lost-found' ? 'Lost & Found' :
                            currentCategory === 'hostels' ? 'Hostels' :
                            currentCategory === 'canteen' ? 'Canteen' :
                            currentCategory === 'study' ? 'Study Groups' :
                            currentCategory === 'events' ? 'Events' :
                            currentCategory === 'sports' ? 'Sports' :
                            currentCategory === 'academics' ? 'Academics' :
                            'General' %>
                    </h1>
                    <a href="/posts/create" class="create-post-btn">
                        <span>‚ûï</span> Create Post
                    </a>
                </div>

                <div class="posts-feed">
                    <% if (posts && posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                            <article class="post-card">
                                <!-- Post Header -->
                                <div class="post-header">
                                    <div class="post-author">
                                        <% if (post.author) { %>
                                        <a href="/users/<%= post.author.username ? post.author.username : post.author._id %>" class="author-avatar">
                                            <%
                                            // Generate avatar URL based on User model logic
                                            let avatarUrl;
                                            if (post.author.avatar && post.author.avatarType === 'upload') {
                                                avatarUrl = `/uploads/avatars/${post.author.avatar}`;
                                            } else if (post.author.avatarSeed && post.author.avatarType === 'api') {
                                                avatarUrl = `https://api.dicebear.com/9.x/adventurer/svg?seed=${post.author.avatarSeed}`;
                                            } else {
                                                const seed = post.author.username || 'default';
                                                avatarUrl = `https://api.dicebear.com/9.x/adventurer/svg?seed=${seed}`;
                                            }
                                            %>
                                            <% if (avatarUrl) { %>
                                                <img src="<%= avatarUrl %>"
                                                     alt="<%= post.author.username || 'User' %>'s avatar"
                                                     onload="console.log('‚úÖ Avatar loaded:', '<%= avatarUrl %>')"
                                                     onerror="console.log('‚ùå Avatar failed:', '<%= avatarUrl %>'); this.style.display='none';">
                                            <% } %>
                                        <% } else { %>
                                        <div class="author-avatar">
                                            <img src="https://api.dicebear.com/9.x/adventurer/svg?seed=unknown" alt="Unknown User's avatar">
                                        <% } %>
                                            <!-- Always show fallback letter -->
                                            <span style="position: absolute; z-index: 1;">
                                                <%= post.author && post.author.username ? post.author.username.charAt(0).toUpperCase() : '?' %>
                                            </span>
                                        </a>
                                        <div class="author-info">
                                            <a href="/users/<%= post.author && post.author.username ? post.author.username : post.author._id %>" class="author-name">
                                                @<%= post.author && post.author.username ? post.author.username : 'Unknown' %>
                                            </a>
                                            <time class="post-time">
                                                <%= new Date(post.createdAt).toLocaleDateString() %>
                                            </time>
                                        </div>
                                    </div>
                                    <div class="post-category">
                                        <span>
                                            <%= post.category === 'lost-found' ? 'üîç' :
                                                post.category === 'hostels' ? 'üè†' :
                                                post.category === 'canteen' ? 'üçï' :
                                                post.category === 'pgs' ? 'üè°' :
                                                post.category === 'study' ? 'üìö' :
                                                post.category === 'events' ? 'üéâ' :
                                                post.category === 'sports' ? '‚öΩ' :
                                                post.category === 'academics' ? 'üéì' :
                                                post.category === 'staff' ? 'üë®‚Äçüè´' : 'üí¨' %>
                                        </span>
                                        <%= post.category.charAt(0).toUpperCase() + post.category.slice(1).replace('-', ' & ') %>
                                    </div>
                                </div>

                                <!-- Post Content -->
                                <div class="post-content">
                                    <p class="post-text"><%= post.content %></p>

                                    <% if (post.location) { %>
                                        <div class="post-location">
                                            <span>üìç</span> <%= post.location %>
                                        </div>
                                    <% } %>

                                    <% if (post.tags && post.tags.length > 0) { %>
                                        <div class="post-tags">
                                            <% post.tags.forEach(tag => { %>
                                                <a href="/posts?tag=<%= tag %>" class="post-tag">#<%= tag %></a>
                                            <% }); %>
                                        </div>
                                    <% } %>
                                </div>

                                <!-- Post Actions -->
                                <div class="post-actions">
                                    <div class="action-buttons">
                                        <button class="action-btn">
                                            <span>ü§ç</span>
                                            <span><%= post.likes ? post.likes.length : 0 %></span>
                                        </button>

                                        <a href="/posts/<%= post._id %>" class="action-btn">
                                            <span>üí¨</span>
                                            <span><%= post.comments ? post.comments.length : 0 %></span>
                                        </a>

                                        <button class="action-btn">
                                            <span>‚ÜóÔ∏è</span>
                                        </button>
                                    </div>

                                    <% if (post.priority === 'urgent') { %>
                                        <span class="priority-badge urgent">üö® URGENT</span>
                                    <% } else if (post.priority === 'high') { %>
                                        <span class="priority-badge high">‚ö° HIGH</span>
                                    <% } %>
                                </div>
                            </article>
                        <% }); %>
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="empty-state">
                            <div class="empty-icon">üí¨</div>
                            <h3>Welcome to UConnect!</h3>
                            <p>Be the first to share something with your campus community.</p>
                            <a href="/posts/create" class="create-post-btn">
                                <span>‚ûï</span> Create Your First Post
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- üéØ RIGHT SIDEBAR -->
