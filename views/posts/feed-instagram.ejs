                    <a href="/posts" class="category-item <%= !currentCategory || currentCategory === 'all' ? 'active' : '' %>">
                        <span>üåü</span>
                        <span>All Posts</span>
                        <span class="category-count"><%= posts ? posts.length : 0 %></span>
                    </a>

                    <a href="/posts?category=lost-found" class="category-item <%= currentCategory === 'lost-found' ? 'active' : '' %>">
