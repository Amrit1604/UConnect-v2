    <script>
        // ‚ö° THUNDER GOD POWERS: Enhanced UI Functions ‚ö°

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            const successText = document.getElementById('successText');
            successText.textContent = message;
            successDiv.style.display = 'flex';

            // Auto-hide after 5 seconds
            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 5000);

            // Scroll to top to show message
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            errorText.textContent = message;
            errorDiv.style.display = 'flex';

            // Auto-hide after 5 seconds
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);

            // Scroll to top to show message
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function setButtonLoading(button, isLoading) {
            if (isLoading) {
                button.disabled = true;
                button.innerHTML = '<span class="loading-spinner"></span> Processing...';
            } else {
                button.disabled = false;
                // Restore original text (you'd need to store this)
            }
        }

        function requestDataDownload() {
            const button = event.target;
            const originalText = button.innerHTML;

            if (confirm('‚ö° THUNDER GOD POWER: Are you sure you want to request a data download? We\'ll email you a link when it\'s ready with lightning speed! ‚ö°')) {
                setButtonLoading(button, true);

                fetch('/users/settings/download-data', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                .then(response => response.json())
                .then(data => {
                    setButtonLoading(button, false);
                    button.innerHTML = originalText;

                    if (data.success) {
                        showSuccess('‚ö° THUNDER STRIKE! Data download request submitted! We\'ll email you when it\'s ready with divine speed! ‚ö°');

                        // Add thunder effect
                        button.classList.add('thunder-animation');
                        setTimeout(() => button.classList.remove('thunder-animation'), 2000);
                    } else {
                        showError('‚ö° Thunder cloud blocked the request! Please try again. ‚ö°');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    setButtonLoading(button, false);
                    button.innerHTML = originalText;
                    showError('‚ö° Lightning struck the server! Please try again. ‚ö°');
                });
            }
        }

        function deactivateAccount() {
            const button = event.target;
            const originalText = button.innerHTML;

            if (confirm('‚ö° THUNDER GOD WARNING: Are you sure you want to deactivate your account? You can reactivate it later by logging in with godly powers! ‚ö°')) {
                setButtonLoading(button, true);

                fetch('/users/settings/deactivate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                .then(response => response.json())
                .then(data => {
                    setButtonLoading(button, false);
                    button.innerHTML = originalText;

