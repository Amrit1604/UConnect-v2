    <style>
        /* Hero Section Container */
        .hero {
            position: relative;
            min-height: 100vh;
            overflow: visible;
            display: flex;
            align-items: center;
            justify-content: center; /* Center the hero content */
        }

        .hero-container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            padding: 0 2rem;
        }

        /* Video section (below hero) */
        .video-section {
            background: var(--surface-color);
            padding: var(--spacing-xl) 0;
        }
        .video-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 var(--spacing-md);
        }
        .video-wrapper {
            position: relative;
            width: 100%;
            aspect-ratio: 16 / 9;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border-light);
        }
        .video-wrapper video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        /* 3D Cards */
        .hero-visual {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            perspective: 1000px;
            pointer-events: none;
            z-index: 10;
            display: block !important; /* Override landing.css hiding */
        }

        .floating-cards {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .floating-cards .card-3d {
            pointer-events: auto;
        }

        .card-3d {
            position: absolute;
            width: 320px;
            padding: 1.5rem;
            background: var(--surface-color);
            backdrop-filter: blur(15px);
            border: 1px solid var(--border-light);
            border-radius: 20px;
            transition: all 0.5s ease;
            cursor: pointer;
            box-shadow: var(--card-shadow);
        }

        [data-theme='dark'] .card-3d {
            background: var(--surface-color);
            border: 1px solid var(--border-light);
            box-shadow: var(--card-shadow);
        }

        .card-3d:hover {
            transform: translateY(-8px) rotateY(-5deg);
            box-shadow: var(--card-hover-shadow);
            background: var(--card-hover-bg);
            border-color: var(--card-hover-border);
        }

        .card1 {
            top: 15%;
            left: 50px;
            z-index: 103;
            animation: float-card 4s ease-in-out infinite;
        }

        .card2 {
            top: 10%;
            right: 50px;
            z-index: 102;
            animation: float-card 4s ease-in-out infinite 1s;
        }

        .card3 {
            bottom: 25%;
            left: 50px;
            z-index: 101;
            animation: float-card 4s ease-in-out infinite 2s;
        }

        .card4 {
            bottom: 20%;
            right: 50px;
            z-index: 104;
            animation: float-card 4s ease-in-out infinite 3s;
        }

        @keyframes float-card {
            0%, 100% {
                transform: translateY(0) rotateY(2deg);
            }
            50% {
                transform: translateY(-15px) rotateY(-2deg);
            }
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 1rem;
        }

        .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: white;
            font-size: 1rem;
            box-shadow: 0 4px 12px rgba(var(--primary-color), 0.3);
        }

        .card-info h4, .demo-name {
            font-size: 0.95rem;
            margin-bottom: 2px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .card-info span, .demo-campus {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        .card-content, .demo-content {
            color: var(--text-secondary);
            line-height: 1.5;
            margin-bottom: 1rem;
            font-size: 0.95rem;
        }

        .card-stats, .demo-actions {
            display: flex;
            gap: 1.5rem;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .card-stats span, .demo-actions span {
            display: flex;
            align-items: center;
            gap: 5px;
            transition: color 0.3s ease;
        }

        .card-stats span:hover, .demo-actions span:hover {
            color: var(--primary-color);
        }

        /* Responsive adjustments */
        @media (max-width: 1400px) {
            .card1, .card3 {
                left: 30px;
            }

            .card2, .card4 {
                right: 30px;
            }
        }

        @media (max-width: 1200px) {
            .card1, .card3 {
                left: 20px;
            }

            .card2, .card4 {
                right: 20px;
            }
        }

        @media (max-width: 968px) {
            .hero {
                padding: 0 2rem;
            }

            .hero-visual {
                display: none !important;
            }
        }

        @media (max-width: 640px) {
            .card-3d {
                width: 100%;
                max-width: 300px;
            }
        }

        /* Add glow effect on hover */
        .card-3d::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(var(--primary-color), 0.1), rgba(var(--primary-light), 0.1));
            border-radius: 20px;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }

        .card-3d:hover::before {
            opacity: 1;
        }
    </style>
